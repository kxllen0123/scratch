/apps/api/docker-compose.yml @your-username

# 文档
*.md @your-username

# 配置文件
/.github/ @your-username
.gitignore @your-username
.dockerignore @your-username

# 依赖管理
/apps/api/requirements.txt @your-username
/apps/api/pyproject.toml @your-username

# 数据和评测集
/data/ @your-username
